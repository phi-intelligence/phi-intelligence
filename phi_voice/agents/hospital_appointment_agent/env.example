# Hospital/Clinic Appointment Agent - Environment Variables
# ========================================================
# Copy this file to .env and fill in your actual values

# LiveKit Cloud Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Hospital Configuration
HOSPITAL_NAME=MedCare Hospital
HOSPITAL_LOCATION=London, UK
HOSPITAL_PHONE=+44 20 7123 4567
HOSPITAL_EMAIL=appointments@medcarehospital.com

# Agent Configuration
AGENT_PERSONALITY=professional
AGENT_EXPERTISE=healthcare
ENABLE_MULTI_LANGUAGE=true
ENABLE_EMERGENCY_PROTOCOLS=true

# Performance Tuning
TTS_TEMPERATURE=0.6
LLM_TEMPERATURE=0.6
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TIMEOUT=3600  # 1 hour in seconds
