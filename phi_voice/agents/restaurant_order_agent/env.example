# Restaurant Order Booking Agent - Environment Variables
# ======================================================
# Copy this file to .env and fill in your actual values

# LiveKit Cloud Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Restaurant Configuration
RESTAURANT_NAME=Bella Vista Restaurant
RESTAURANT_LOCATION=London, UK
RESTAURANT_PHONE=+44 20 7123 4567
RESTAURANT_EMAIL=reservations@bellavista.com

# Agent Configuration
AGENT_PERSONALITY=friendly
AGENT_EXPERTISE=restaurant_service
ENABLE_MULTI_LANGUAGE=true
ENABLE_WINE_PAIRING=true

# Performance Tuning
TTS_TEMPERATURE=0.7
LLM_TEMPERATURE=0.7
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TIMEOUT=3600  # 1 hour in seconds
